{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "plugin:vue/essential",
    "standard"
  ],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": [
    "vue"
  ],
  "rules": {
    "space-before-function-paren": "off",
    "indent": "warn",
    "quotes": "warn",
    "eqeqeq": "warn",
    "semi": "warn",
    "no-trailing-spaces": "warn",
    "comma-dangle": "warn",
    "no-unused-vars": "warn",
    "no-multi-spaces": "warn",
    "padded-blocks": "warn",
    "eol-last": "warn",
    "no-return-assign": "warn",
    "vue/no-unused-components": "warn",
    "vue/no-multiple-template-root": "warn",
    "vue/valid-template-root": "warn"
  }
}
